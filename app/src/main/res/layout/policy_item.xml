<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:translationZ="10dp"
    android:background="@drawable/rect_corner_6dp_blue"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#00ffffff" />

    <LinearLayout
        android:id="@+id/lin_policyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_policyItem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="农业部大力推动落实休闲农业和乡村旅游发展政策"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:textColor="#ffffff"
            android:id="@+id/tv_policyItem_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="农业部新闻办公室           2017-05-31 15:05:16" />
    </LinearLayout>
</LinearLayout>